@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Listesi</h2>
<br />

<table class="table table-bordered mx-3 my-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>DEPARTMAN ADI</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.DepartmanId</td>
                <td>@d.DepartmanAd</td>
                <td><a href="/Departman/DepartmanSil/@d.DepartmanId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Departman/DepartmanGuncelle/@d.DepartmanId" class="btn btn-primary">Güncelle</a></td>
                <td><a href="/Departman/DepartmanDetay/@d.DepartmanId" class="btn btn-success">Detaylar</a></td>
            </tr>
        }
    </tbody>
    

</table>
<a href="/Departman/DepartmanEkle" class="btn btn-primary">Yeni Departman</a>



<link href="~/Content/bootstrap.css" rel="stylesheet" />

