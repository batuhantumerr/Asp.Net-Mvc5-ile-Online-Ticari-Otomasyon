@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<table class="table table-bordered">
    <thead>
    <tr>
        <th>SATIŞ ID</th>
        <th>ÜRÜN</th>
        <th>CARİ</th>
        <th>PERSONEL</th>
        <th>ADET</th>
        <th>FİYAT</th>
        <th>TOPLAM TUTAR</th>
        <th>TARİH</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.SatisId</td>
                <td>@s.Urun.UrunAd</td>
                <td>@s.Cari.CariAd  @s.Cari.CariSoyad</td>
                <td>@s.Personel.PersonelAd @s.Personel.PersonelSoyad</td>
                <td>@s.Adet</td>
                <td>@s.Fiyat</td>
                <td>@s.ToplamTutar</td>
                <td>@s.Tarih</td>
                <td><a href="/Satis/SatisGuncelle/@s.SatisId" class="btn btn-primary">Güncelle</a></td>
                <td><a href="#" class="btn btn-dark">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Satis/SatisEkle/" class="btn btn-primary">Yeni Satış</a>


