@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Satış Yap</h2>
<br />

<form class="form-group" method="post">

    @Html.LabelFor(x => x.UrunId)
    <input type="text" name="UrunId" value="@ViewBag.UrunId" class="form-control" readonly />
    <br />

    @Html.LabelFor(x => x.PersonelId)
    @Html.DropDownListFor(x => x.PersonelId, (List<SelectListItem>)ViewBag.Personeller, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.CariId)
    @Html.TextBoxFor(x => x.CariId, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Adet)
    <input type="number" name="Adet" id="UrunAdet" onchange="hesapla();" min="1" max="10" class="form-control"/>
    <br />

    @Html.LabelFor(x => x.Fiyat)
    <input type="text" name="Fiyat" id="UrunFiyat" onchange="hesapla();" value="@ViewBag.UrunFiyat" class="form-control" />
    <br />

    @Html.LabelFor(x => x.ToplamTutar)
    <input type="text" name="ToplamTutar" id="ToplamTutar"  class="form-control"/>
    <br />

    <br />
    <button class="btn btn-primary">Satış Yap</button>
    <br />
</form>

<script>
    function hesapla() {
        var UrunFiyat = document.getElementById('UrunFiyat').value;
        var UrunAdet = document.getElementById('UrunAdet').value;
        var ToplamTutar = parseInt(UrunFiyat) * parseInt(UrunAdet);
        if (!isNaN(ToplamTutar)) {
            document.getElementById('ToplamTutar').value = ToplamTutar;
        }
    }
</script>